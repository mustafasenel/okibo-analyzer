generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Invoice {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  companyCode     String   @map("company_code")
  status          Status   @default(PENDING)
  createdAt       DateTime @default(now()) @map("created_at")
  invoiceMeta     Json     @map("invoice_meta")
  invoiceData     Json     @map("invoice_data")
  invoiceSummary  Json     @map("invoice_summary")

  @@index([companyCode])
  @@map("invoices")
}

enum Status {
  PENDING
  COMPLETED
}
