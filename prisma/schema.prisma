generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Invoice {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  companyCode     String
  createdAt       DateTime @default(now())
  invoiceMeta     Json
  invoiceData     Json
  invoiceSummary  Json
  status          Status   @default(PENDING)

  // Relation to Company
  company         Company  @relation(fields: [companyCode], references: [code])
  
  // Relation to Images
  images          InvoiceImage[]
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
}

model Company {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  code              String    @unique
  monthlyScanLimit  Int       @default(100)
  currentScanCount  Int       @default(0)
  scanCountResetAt  DateTime  @default(now())

  invoices          Invoice[]
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model InvoiceImage {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  invoiceId   String   @db.ObjectId
  filename    String
  originalName String
  mimeType    String
  size        Int
  data        Bytes    // Base64 encoded image data
  pageNumber  Int      @default(1)
  createdAt   DateTime @default(now())
  
  // Relation to Invoice
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}
